<script>
document.getElementById('search-form').addEventListener('submit', async function(e) {
  e.preventDefault();
  const title = document.getElementById('search-title').value;
  const author = document.getElementById('search-author').value;
  const resultsDiv = document.getElementById('search-results');
  resultsDiv.innerHTML = '';

  const res = await fetch(`/user/api/google-books?title=${encodeURIComponent(title)}&author=${encodeURIComponent(author)}`);
  const books = await res.json();

  if (!books.length) {
    resultsDiv.innerHTML = '<div style="color:red;">No books found.</div>';
    return;
  }

  const grid = document.createElement('div');
  grid.className = 'category-row';

  books.forEach(book => {
    const info = book.volumeInfo;
    const imageUrl = info.imageLinks && info.imageLinks.thumbnail
      ? info.imageLinks.thumbnail
      : 'https://via.placeholder.com/210x340?text=No+Cover';
    const category = info.categories && info.categories.length
      ? info.categories[0]
      : 'Uncategorized';
    const div = document.createElement('div');
    div.className = 'result-card';
    div.innerHTML = `
      <img src="${imageUrl}" alt="Book Cover">
      <strong>${info.title || ''}</strong><br>
      <em>${info.authors ? info.authors.join(', ') : ''}</em><br>
      <span style="background:#222; color:#ffd700; padding:3px 12px; border-radius:8px; font-size:0.95em; margin-bottom:8px; display:inline-block;">${category}</span>
      <button>Save</button>
      <hr>
    `;
    div.querySelector('button').onclick = async () => {
      await fetch('/user/api/save-google-book', {
